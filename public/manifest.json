{
	"manifest_version": 3,
	"name": "NOC Port Monitor",
	"version": "3.0.1",
	"description": "Monitor router port status changes from NOC Portal",
	"permissions": [
		"storage",
		"alarms",
		"cookies",
		"sidePanel",
		"tabs",
		"contextMenus"
	],
	"host_permissions": [
		"https://nocportal.telekom.rs/*"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"side_panel": {
		"default_path": "app/index.html"
	},
	"action": {
		"default_title": "NOC Port Monitor",
		"default_icon": {
			"16": "assets/icon-16.png",
			"48": "assets/icon-48.png",
			"128": "assets/icon-128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://nocportal.telekom.rs/*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "assets/icon-16.png",
		"48": "assets/icon-48.png",
		"128": "assets/icon-128.png"
	}
}
